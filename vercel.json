{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.3",
            "config": {
                "build": [
                    "echo 'VERCEL BUILD: Installing Node.js dependencies'",
                    "npm install",
                    "echo 'VERCEL BUILD: Compiling frontend assets (Tailwind CSS & JS with Vite)'",
                    "npm run build",
                    "echo 'VERCEL BUILD: Running Composer Vercel build script for Laravel'",
                    "composer vercel-build"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            },
            "dest": "/public/build/$1"
        },
        {
            "src": "/(favicon\\.ico|robots\\.txt|images/.*)",
            "headers": {
                "Cache-Control": "public, max-age=86400"
            },
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Vercel Laravel Blade",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://laravel-vercel-app.vercel.app",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "CACHE_DRIVER": "file",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "file",
        "VIEW_COMPILED_PATH": "/tmp/views",
        "SSR_TEMP_PATH": "/tmp/ssr",
        "NODE_PATH": "node"
    }
}
